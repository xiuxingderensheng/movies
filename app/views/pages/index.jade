extends ../layout

block content
	.container(style="margin-bottom: 50px;")
		.row
			each cat in categories
				.panel.panel-default
					.panel-heading
						h3 
							a(href="/results?cat=#{cat._id}&p=0") #{cat.name}
					.panel-body
						if cat.movies && cat.movies.length > 0
							each item in cat.movies
								.col-md-2
									.thumbnail(style="overflow: hidden;white-space: nowrap;")
										a(href="/movie/#{item._id}")
											if item.poster.indexOf('http') > -1
												img(src="#{item.poster}", alt="#{item.title}", style="width: 100%; height: 230px;")
											else
												img(src="/upload/#{item.poster}", alt="#{item.title}", style="width: 100%; height: 230px;")
										.caption
											h4(title="#{item.title}")  #{item.title}
											p: a.btn.btn-primary(href="/movie/#{item._id}", role="button") 观看预告片
			